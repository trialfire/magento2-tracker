<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Customer:etc/sections.xsd">
    <!-- Invalidate the tracker events list section on the following actions. -->
    <action name="checkout/cart/add">
        <section name="trialfire-tracker-events" />
    </action>
    <action name="checkout/cart/delete">
        <section name="trialfire-tracker-events" />
    </action>
    <action name="checkout/sidebar/removeItem">
        <section name="trialfire-tracker-events" />
    </action>
    <action name="whishlist/index/add">
        <section name="trialfire-tracker-events"/>
    </action>
    <action name="newsletter/subscriber/new">
        <section name="trialfire-tracker-events"/>
    </action>
</config>
